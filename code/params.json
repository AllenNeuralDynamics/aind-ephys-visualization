{
    "job_kwargs": {
        "chunk_duration": "1s",
        "progress_bar": false
    },
    "timeseries": {
        "n_snippets_per_segment": 2,
        "snippet_duration_s": 0.5
    },
    "drift": {
        "detection": {
            "peak_sign": "neg", 
            "detect_threshold": 5, 
            "exclude_sweep_ms": 0.1
        },
        "localization": {
            "ms_before": 0.1, 
            "ms_after": 0.3, 
            "radius_um": 100.0
        },
        "n_skip": 30,
        "alpha": 0.15,
        "vmin": -200,
        "vmax": 0,
        "cmap": "Greys_r",
        "figsize": [10, 10]
    },
    "motion": {
        "cmap": "Greys_r", 
        "scatter_decimate": 15, 
        "figsize": [15, 10]
    }
}
