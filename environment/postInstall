#!/usr/bin/env bash
set -e

pip uninstall -y spikeinterface
git clone https://github.com/alejoe91/spikeinterface.git
cd spikeinterface
git checkout 71100c447ca9aa0ec4a6dda48d63d97f6c329f81
pip install --ignore-installed --no-cache-dir .[full,widgets]
cd ..

pip uninstall -y traitlets
pip install --no-cache-dir --ignore-installed traitlets==5.9.0